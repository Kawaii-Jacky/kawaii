.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部状态栏 */
.status-bar {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-around;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.status-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.status-item .label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.status-item .value {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

/* 组件卡片区域 */
.components-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  flex: 1;
}

.component-card {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
  margin-right: 16rpx;
}

.light-icon {
  background-color: #ffd700;
}

.motor-icon {
  background-color: #4a90e2;
}

.solar-icon {
  background-color: #f5a623;
}

.network-icon {
  background-color: #7ed321;
}

.card-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.card-content {
  font-size: 24rpx;
  color: #666;
}

.device-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.device-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
}

.device-name {
  font-size: 26rpx;
  color: #333;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
}

.info-item .label {
  font-size: 24rpx;
  color: #666;
}

.info-item .value {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
}

.value.connected {
  color: #07c160;
}

.value.disconnected {
  color: #ff4d4f;
}

/* 底部目录按钮 */
.directory-button {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-top: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.button-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.button-text {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.button-arrow {
  font-size: 28rpx;
  color: #999;
}

.section {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  border-left: 8rpx solid #07c160;
}

.environment-info, .power-info {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
}

.lights-grid, .motors-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300rpx, 1fr));
  gap: 20rpx;
}

.light-item, .motor-item {
  background-color: #f8f8f8;
  padding: 20rpx;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.light-name, .motor-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.motor-controls {
  display: flex;
  gap: 10rpx;
}

.motor-controls button {
  flex: 1;
  font-size: 24rpx;
  padding: 10rpx 0;
  background-color: #07c160;
  color: white;
}

.motor-controls button:last-child {
  background-color: #ff4d4f;
}

slider {
  margin: 10rpx 0;
} 