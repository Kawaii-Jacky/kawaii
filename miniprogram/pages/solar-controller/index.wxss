.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.section {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  border-left: 8rpx solid #07c160;
}

.info-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200rpx, 1fr));
  gap: 20rpx;
  padding: 10rpx 0;
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}

.label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.value {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.control-panel {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}

.timer-controls {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.time-picker {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  margin-top: 10rpx;
}

.time-picker view {
  padding: 10rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

progress {
  margin: 20rpx 0;
} 